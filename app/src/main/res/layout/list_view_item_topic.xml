<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design for topic -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="6dip" >

    <TextView
        android:id="@+id/item_show_topics_topic_title"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="27dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_show_topics_topic_last_mes"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_show_topics_topic_title"
        android:layout_alignStart="@+id/item_show_topics_topic_title"
        android:layout_alignEnd="@+id/item_show_topics_topic_title"
        android:layout_marginStart="19dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="3dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/gray_100"
        android:textSize="15sp" />


</RelativeLayout>