<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/show_chat_topic_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_chat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/show_chat_topic_icon"
        app:layout_constraintStart_toEndOf="@+id/show_chat_topic_icon"
        app:layout_constraintTop_toTopOf="@+id/show_chat_topic_icon"
        app:layout_constraintVertical_bias="0.44" />

    <ListView
        android:id="@+id/show_chat_list"
        android:layout_width="wrap_content"
        android:layout_height="510dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="90dp"
        android:divider="@color/white"
        android:dividerHeight="1dp"
        android:stackFromBottom="true"
        android:transcriptMode="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_chat_title"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>